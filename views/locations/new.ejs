<% currentPage = 'Create Location | SVN' %>

<% layout('layouts/boilerplate')%>

<span class="br-md"></span>

<div class="container">
    <div class="row">
        <div class="col-5">
            <span class="br-sm"></span>
            <!-- <div class="text-center">
                <h2 class="dark-text">Need Help With Business?</h2>
                <h4 class="sub-text">Create a volunteer opportunity and volunteers will come to you.</h4>
            </div> -->

            <lottie-player src="/media/createLocation.json" background="transparent" speed="0.8"
                style="width: 35rem; height: 50rem;" loop autoplay></lottie-player>
        </div>


        <div class="col-7 container-box" style="height: max-content;  z-index: 20;">
            <h2 class="dark-text">New Location</h2>
            <span class="br-sm"></span>

            <form action="/locations" method="POST" novalidate class="validated-form" enctype="multipart/form-data">

                <div class="mb-3">
                    <label class="form-label dark-text" for="password">Location Name</label>
                    <input class="form-control" type="text" id="title" name="location[title]" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <div class="mt-3 mb-3">
                    <label class="form-label dark-text" for="address">Address</label>
                    <input class="form-control" type="text" id="address" name="location[address]" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>

                <div class="mt-3 mb-3">
                    <label class="form-label dark-text" for="address">Description</label>
                    <textarea class="form-control" type="text" id="description" name="location[description]"
                        oninput="this.style.height = '';this.style.height = this.scrollHeight + 'px'"
                        required></textarea>

                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>

                <div class="mb-3">
                    <div class="form-file custom-file">
                        <input type="file" class="form-file-input" id="image" name="image" multiple>
                        <label class="form-file-label" for="image">
                            <span class="form-file-text custom-file-label">Choose image(s)...</span>
                            <span class="form-file-button">Browse</span>
                        </label>
                    </div>
                </div>

                <!-- <div class="mb-3">
                    <div class="input-group">
                        <input type="file" class="form-control dark-text" id="inputGroupFile04"
                            aria-describedby="inputGroupFileAddon04" aria-label="Upload" multiple>
                    </div>
                </div> -->

                <span class="br-sm"></span>

                <div class="mb-3">
                    <button class="btn btn-primary">Create New Location</button>
                </div>
            </form>
        </div>
    </div>
</div>


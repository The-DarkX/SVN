<% currentPage = 'Login | SVN' %>

<% layout('layouts/boilerplate') %>


<span class="br-md"></span>
<div class="container">
    <div class="row">
        <div class="col-md-6 container-box">
            <h2 class="dark-text">Login</h2>
            <span class="br-sm"></span>

            <form action="/login" method="post" class="validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="location">Email</label>
                    <input class="form-control" type="email" id="email" name="email" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" type="password" id="password" name="password" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <span class="br-sm"></span>

                <button class="btn btn-primary">Login</button>
            </form>
        </div>

        <div class="col-md-6">
            <lottie-player src="/media/login.json" background="transparent" speed="1"
                style="width: 55rem; height: 30rem;" loop autoplay></lottie-player>
        </div>
    </div>
</div>

<span class="br-sm"></span>